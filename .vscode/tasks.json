{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Mailer/Mailer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "dotnet-app",
            "appPort": 5000,
            "label": "daprd-debug-dotnet",
            "httpPort": 3500,
            "grpcPort": 50000,
            "metricsPort": 9090,
            "type": "daprd",
            "dependsOn":["dotnet-build"]
        },
        {
            "appId": "dotnet-app",
            "label": "daprd-down-dotnet",
            "type": "daprd-down"
        },
        {
            "type": "shell",
            "label": "yarn-install",
            "command": "yarn",
            "options": {
                "cwd": "${workspaceFolder}/node-service"
            }
        },
        {
            "type": "shell",
            "label": "client-build",
            "command": "yarn build",
            "options": {
                "cwd": "${workspaceFolder}/node-service/client"
            },
            "dependsOn":["yarn-install"]
        },
        {
            "label": "server-build",
            "type": "typescript",
            "tsconfig": "node-service/server/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":["client-build"]
        },
        {
            "appId": "node-app",
            "appPort": 3000,
            "label": "daprd-debug-node",
            "httpPort": 3501,
            "grpcPort": 50001,
            "metricsPort": 9091,
            "type": "daprd",
            "dependsOn":["server-build"]
        },
        {
            "appId": "node-app",
            "label": "daprd-down-node",
            "type": "daprd-down"
        }
    ]
}