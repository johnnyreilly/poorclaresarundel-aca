        "@types/koa-router": "^7.4.4",
        "@types/koa-send": "^4.1.3",
        "@types/koa-static": "^4.0.2",
        "@types/mailgun-js": "^0.22.13",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "cpx2": "^8.0.0",
        "cross-env": "^7.0.3",
